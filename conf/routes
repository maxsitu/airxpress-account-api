# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /api/summary                controllers.FrontendController.appSummary

+ nocsrf
POST    /user                       controllers.UserController.createUser
+ nocsrf
POST    /login                      controllers.UserController.validateUser
+ nocsrf
PUT     /userPermissions/:username  controllers.UserController.putUserPermissions(username: String)
+ nocsrf
PATCH   /userPermissions/:username  controllers.UserController.patchUserPermissions(username: String)
+ nocsrf
PUT     /userRoles/:username        controllers.UserController.putUserRoles(username: String)
+ nocsrf
PATCH   /userRoles/:username        controllers.UserController.patchUserRules(username: String)

GET     /userInfo                   controllers.UserController.userInfo
GET     /userInfo/:username         controllers.UserController.user(username: String)
GET     /restrictOne                controllers.UserController.restrictOne






# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET     /*file                      controllers.FrontendController.assetOrDefault(file)
